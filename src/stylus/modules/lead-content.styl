.container.lead-content
	@media (min-width 48.75em)
		text-align center
		margin-bottom 1.4em
	
	.lead-display
		display block
		width 100%
		height 0
		padding-top 56.25%
		
		@media (min-width 20em)
			margin 1.5em -1.1em 0
			width 100vw
			
		@media (min-width 48.75em)
			margin 0
			width 100%
		
		&.overview
			background url('/images/glass-meeting-room.jpg') no-repeat 50% 20% / cover

		&.agile-management
			background url('/images/scrum-meeting.jpg') no-repeat 0% 80% / 120% auto

		&.agile-management-it
			background url('/images/it-meeting.jpg') no-repeat 50% 20% / cover

	h1
		@media (min-width 20em)
			font-size 1.4em
			margin 0.6em 0.4em
			color color-primary
		@media (min-width 48.75em)
			position relative
			// bottom 4em
			top -12vw
			left 0
			right 0
			margin auto auto -1.1em
			font-size 3vw
			width 80%
			text-align center
			color white
			text-shadow 0 2px 4px rgba(0,0,0,0.8)

	a.cta
		@media (min-width 20em)
			display none
		@media (min-width 48.75em)
			display inline-block
			margin -7vw auto 0
			background-color white
			position absolute
			left 0
			right 0
			width 12em
			text-transform uppercase
			font-weight font-weight-semibold
			color color-nav-header
			border-radius 0
			padding 0.5em 2em
