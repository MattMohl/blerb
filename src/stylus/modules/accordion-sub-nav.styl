.accordion
	
	label&.sub-nav
		
		cursor pointer
		
		@media (min-width 20em)
			display block
			color color-primary
			position relative
			left -30px
			max-width none
			width 100vw
			margin 0
			padding 1.0em 30px
			box-sizing border-box
			border-top solid 1px color-shadow
			
			&:last-of-type
				border-bottom 1px solid color-shadow
			
			h2
				font-size 1.2em
				font-weight font-weight-semibold
		
		@media (min-width 48.75em)
			left initial
			width auto
			padding 1.0em 15px
			
			h2
				text-transform uppercase
				font-size: 1.0em

		&:after
			content ''
			display block
			position absolute
			top 0
			bottom 0
			right 1.5em
			margin auto
			width 0
			height 0
			border 8px solid transparent
			border-right-color color-primary
			transform-origin 80% 50%
			transition transform 0.15s ease-out 0s
			
			@media (min-width 48.75em)
				border-right-color cerulean
	
	&:checked + label.sub-nav
		border-bottom 1px solid color-shadow
		// margin-bottom 1em
		
	&:checked + label.sub-nav:after
		transform rotate(-90deg)

	&.content
	&:checked ~ &.content ~ &.content
		margin-bottom 0
		max-height 0
		overflow-y hidden
		padding 0

	&:checked ~ &.content
		// margin-bottom 1em
		max-height none
		padding 1em 0
		
		h3
			font-size 1.0em
			font-weight font-weight-semibold
			margin 1.5em 0 0.5em
			
			@media (min-width 48.75em)
				text-transform uppercase
			
		ul
			padding-left 1em
	
	&.course-objectives.content
		@media (min-width 48.75em)
			background white url("/images/course-objectives-bg.jpg") no-repeat 100% 50% / auto 100%

	.cta-container
		text-align center

